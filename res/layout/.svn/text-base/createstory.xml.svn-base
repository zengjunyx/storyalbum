            android:gravity="center">

            <ImageView
                android:id="@+id/createstory_iv_1"
                android:layout_width="300dp"
               android:layout_centerHorizontal="true"
                android:layout_height="400dp"
                android:gravity="center">
                
            </ImageView>

        </TableRow>
        
         <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
